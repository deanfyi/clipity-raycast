{
  "name": "clipity",
  "title": "Clipity",
  "version": "1.0.0",
  "description": "Trim & download videos from any URL",
  "icon": "icon.png",
  "author": "Dean",
  "license": "MIT",
  "categories": ["Media", "Productivity"],
  "commands": [
    {
      "name": "download",
      "title": "Download Video",
      "description": "Paste a URL, trim it, and download",
      "mode": "view"
    },
    {
      "name": "setup",
      "title": "Setup clipity",
      "description": "Install yt-dlp and ffmpeg dependencies",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.0",
    "@raycast/utils": "^1.15.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "typescript": "^5.4.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
